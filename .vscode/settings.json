{
  // Prettier Setup
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Code Actions (Optional, useful with ESLint)
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  // Tab & Formatting Preferences
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,

  // Auto Imports & Suggestions
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifier": "relative",

  // File Associations (Ensure JSX recognized properly)
  "files.associations": {
    "*.js": "javascriptreact",
    "*.jsx": "javascriptreact"
  },

  // Optional: Disable Built-in HTML Formatter (Prettier will handle it)
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
